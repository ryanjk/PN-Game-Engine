#version 450 core

in VS_OUT {
	vec3 position;
	vec3 normal;
	vec2 tc;
} fs_in;

layout (binding = 0) uniform sampler2D diffuseMap;

out vec4 colour;

void main() {
	vec4 finalColour = vec4(0.0, 0.0, 0.0, 1.0);

	// Add diffuse colour from texture
	finalColour += texture(diffuseMap, fs_in.tc);

	colour = finalColour;
}